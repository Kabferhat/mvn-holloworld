pipeline {
    agent any

    stages {
        stage('Clone') {
            steps { 
                sh 'rm -rf *'
                sh 'git clone https://github.com/Kabferhat/jenkins-test.git'
            }
        }

        stage('Build') { 
            steps { 
                dir('jenkins-test') {
                    sh 'javac main.java'
                }
            }
        }
    }
}
